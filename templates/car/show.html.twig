{% extends 'base.html.twig' %}

{% block title %}{{ car.name }} – Véhicloc{% endblock %}

{% block body %}

<section id="car">

    <a href="{{ path('app_car_index') }}">← Retour</a>

    <h1>{{ car.name }}</h1>

    <p class="description-car">
        {{ car.description }}
    </p>

    <div class="advantages">
        <div class="single-advantage">
            <img src="{{ asset('assets/icons/checked.png') }}" alt="">
            Km illimités
        </div>

        <div class="single-advantage">
            <img src="{{ asset('assets/icons/checked.png') }}" alt="">
            Taxe routière incluse
        </div>

        <div class="single-advantage">
            <img src="{{ asset('assets/icons/checked.png') }}" alt="">
            Assistance dépannage 24/7
        </div>

        <div class="single-advantage">
            <img src="{{ asset('assets/icons/checked.png') }}" alt="">
            Pas de frais cachés
        </div>

        <div class="single-advantage">
            <img src="{{ asset('assets/icons/checked.png') }}" alt="">
            Assurance au tiers
        </div>

        <div class="single-advantage">
            <img src="{{ asset('assets/icons/checked.png') }}" alt="">
            Réservation sécurisée
        </div>
    </div>

    <hr>

    <p class="legal-information">
        Les conducteurs doivent avoir leur permis de conduire depuis au moins 5 ans.
    </p>

    <div class="total-rent">
        <span>Total</span>
        <span>{{ car.monthlyPrice }} €/mois</span>
    </div>

    <button class="btn-add">
        Louer pour {{ car.monthlyPrice }} €/mois
    </button>

</section>


{# ========================== #
   SECTION ASSURANCES
# ========================== #}

<section id="insurances">
    <h2>Les Assurances et Assistances</h2>

    <div class="insurances-list">

        <div class="single-insurance">
            <img src="{{ asset('assets/icons/basic.png') }}" alt="Basique">
            <h3>Protection Basique</h3>
            <p>
                <img src="{{ asset('assets/icons/checked.png') }}" alt="">
                Assurance dommages pour les collisions et le vol.
            </p>
        </div>

        <div class="single-insurance">
            <img src="{{ asset('assets/icons/complete.png') }}" alt="Complète">
            <h3>Protection Complète</h3>
            <p>
                <img src="{{ asset('assets/icons/checked.png') }}" alt="">
                Protection pneus et vitres.
            </p>
            <p>
                <img src="{{ asset('assets/icons/checked.png') }}" alt="">
                Assurance dommages, rayures, chocs, vol.
            </p>
        </div>

    </div>
</section>

{% endblock %}
